        android:id="@+id/main_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/label_size"
        android:textColor="@color/white"
        android:layout_margin="@dimen/score_margin"
        tools:text="000" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/BTN_Left"
        android:layout_width="@dimen/arrow_dimen"
        android:layout_height="@dimen/arrow_dimen"
        app:iconSize="@dimen/arrow_icon_dimen"
        app:icon="@drawable/arrow_left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layoutDirection="ltr"
        app:iconTint="@color/arrow_color"
        android:backgroundTint="@color/purple"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="60dp"
        android:padding="10dp"
        android:insetTop="0dp"
        android:contentDescription="Move Left"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BTN_Right"
